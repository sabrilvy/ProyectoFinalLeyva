<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoriaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:gravity="center"
            android:text="Nuestra Historia"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:textStyle="bold" />

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="315dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="17dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:text="Cuenta la leyenda que, en el intento de ayudar a sus familias a sobrevivir al hambre y a los tártaros, que les esperaban a salir de la cueva donde se mantenían escondidos en la montaña, la chica recogió la poca harina que les quedaba y la mezcló con cenizas, y de la misma preparó unos rizos gigantes que en rollo en torno a un palo rugoso de madera y que, tras haberlos tostado, se los enseñaron también a los tártaros, pretendiendo de este modo estar bien y prósperos.  Hambrientos y cansados, viéndolos, los tártaros desistieron y se retiraron. "
            android:textColor="#FFFFFF" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>