<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Control de inventario"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            app:srcCompat="@drawable/logorollitos" />

        <EditText
            android:id="@+id/etId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Id del producto:"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre del producto:"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/etExistencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Existencias:"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnNuevo"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#251507"
            android:onClick="altaProducto"
            android:text="Nuevo producto" />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#251507"
            android:onClick="consultaProducto"
            android:text="Buscar por id" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#251507"
            android:onClick="eliminarProducto"
            android:text="eliminar producto" />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#251507"
            android:onClick="modificarProductos"
            android:text="Actualizar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>